<s:ItemRenderer
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
		<s:Image source="http://tmgame.ru/files/awrd/{data.@img}" />
		<s:Label text="{data.title}" color.hovered="0x1313cd" color.selected="0x000000" verticalAlign="bottom"/>
	
</s:ItemRenderer>